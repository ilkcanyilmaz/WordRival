<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".views.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_accent2">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:backgroundTint="#00000000" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="@dimen/_24sdp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="center_horizontal|bottom">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Hesap"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_settingsTitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="ilkcan.tr@hotmail.com"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <TextView
                    android:id="@+id/txt_signout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_exit_to_app"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Oturumu kapat"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_settingsContent" />

                <!-- <TextView
                     android:id="@+id/txt_deleteAccount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:drawableLeft="@drawable/ic_delete"
                     android:drawablePadding="12dp"
                     android:fontFamily="@font/inter_medium"
                     android:gravity="center"
                     android:text="Hesabı sil"
                     android:textColor="#474747"
                     android:textSize="@dimen/textSize_settingsContent" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Uygulama"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_settingsTitle"
                    android:fontFamily="@font/inter_bold" />

                <TextView
                    android:id="@+id/txt_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_language"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Türkçe"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_notification"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:text="Bildirimler"
                        android:textColor="#474747"
                        android:textSize="@dimen/textSize_settingsContent" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="130dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_languag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_language"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Türkçe"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Destek"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_settingsTitle"
                    android:fontFamily="@font/inter_bold" />

                <TextView
                    android:id="@+id/txt_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_info"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Hakkında"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <TextView
                    android:id="@+id/txt_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_feedback"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Geri Bildirim"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <TextView
                    android:id="@+id/txt_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_star_border"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Puan ver"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_share"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Paylaş"
                    android:textColor="#474747"
                    android:textSize="@dimen/textSize_settingsContent" />

                <TextView
                    android:id="@+id/txt_privacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Gizlilik Sözleşmesi"
                    android:textColor="#474747"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>